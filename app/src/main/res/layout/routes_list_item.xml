<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="54dp"
    android:minHeight="54dp">

    <com.costular.guaguaslaspalmas.widget.views.CircleView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        app:circleRadius="20dp"
        app:strokeWidth="0dp"
        app:circleGap="0dp"
        app:fillColor="@android:color/holo_orange_light"
        app:strokeColor="@android:color/holo_purple"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>


</RelativeLayout>