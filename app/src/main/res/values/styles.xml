<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/main_indigo</item>
        <item name="colorPrimary">@color/main_indigo</item>
        <item name="colorPrimaryDark">@color/main_indigo_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="AppTheme.Indigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_indigo</item>
        <item name="colorPrimary">@color/main_indigo</item>
        <item name="colorPrimaryDark">@color/main_indigo_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Pink" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_pink</item>
        <item name="colorPrimary">@color/main_pink</item>
        <item name="colorPrimaryDark">@color/main_pink_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Purple" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_purple</item>
        <item name="colorPrimary">@color/main_purple</item>
        <item name="colorPrimaryDark">@color/main_purple_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_red</item>
        <item name="colorPrimary">@color/main_red</item>
        <item name="colorPrimaryDark">@color/main_red_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_blue</item>
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/main_blue_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_green</item>
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryDark">@color/main_green_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Orange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/main_orange</item>
        <item name="colorPrimary">@color/main_orange</item>
        <item name="colorPrimaryDark">@color/main_orange_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme.Gray" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@color/main_gray</item>
        <item name="colorPrimaryDark">@color/main_gray_dark</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <!-- background of the  -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>


    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textSize">@dimen/body_text_1</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textSize">@dimen/body_text_2</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextAppearance.EditText.Error" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/edit_text_error_color</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>